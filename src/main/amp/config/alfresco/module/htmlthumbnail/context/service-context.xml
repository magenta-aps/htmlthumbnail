<beans>

    <bean id="webscript.dk.magenta.iframethumbnail.get"
          class="dk.magenta.webscripts.HTMLIFrameThumbnailGetWebscript"
          parent="webscript">
        <property name="contentService" ref="ContentService"/>
        <property name="nodeService" ref="NodeService"/>
        <property name="dictionaryService" ref="dictionaryService"/>
        <property name="serviceRegistry" ref="ServiceRegistry"/>
        <property name="stringToInsertInHeadTag">
            <!-- The following script is inserted into the <head> tag.

            It posts the iframe's height to the parent window on load.
            -->
            <value><![CDATA[
    <script>
    (function() {
        function getHeight() {
            var body = document.body, html = document.documentElement;
            return Math.max(body.scrollHeight, body.offsetHeight, html.offsetHeight);
        }
        function onload() {
            window.parent.postMessage({iframeHeight:getHeight()}, '*');
        }

        if (window.addEventListener) {
            window.addEventListener('load', onload);
        }
        else if (window.attachEvent) {
            window.attachEvent('onload', onload);
        }
        else {
            window.onload = onload;
        }
    })();
    </script>
                ]]></value>
        </property>
    </bean>

    <bean id="dk_magenta-htmlthumbnail.register.htmlthumbnail"
          class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="thumbnailRegistry" />
        <property name="targetMethod" value="addThumbnailDefinition" />
        <property name="arguments">
            <list>
                <bean class="org.alfresco.repo.thumbnail.ThumbnailDefinition">
                    <property name="name" value="html" />
                    <property name="mimetype" value="text/html" />
                    <property name="transformationOptions">
                        <!-- The thumbnail definition have transformationOptions mandatory -->
                        <!-- But there are none for html, so use SWFTransformationsOptions as dummy -->
                        <bean class="org.alfresco.repo.content.transform.swf.SWFTransformationOptions">
                            <property name="flashVersion" value="9" />
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>
